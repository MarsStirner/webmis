<h2>История болезни номер <%= number %></h2>
<div class="EditForm">
	<ul class="LineBlockHolder Clearfix">
		<li>
			<div class="LineBlock">
				<div class="LineCol">
					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Группа крови</span>
						</div>
						<div class="HalfCol">
							<p>
								<% if (patient.medicalInfo.blood.group.length) { %>
								<%= patient.medicalInfo.blood.group %>
								<% } else { %>
								-
								<% } %>
							</p>
						</div>
					</div>
					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Медикаментозная непереносимость</span>
						</div>
						<div class="LineCol">
							<% if (patient.medicalInfo.drugIntolerances.length && patient.medicalInfo.drugIntolerances[0].substance.length) { %>
							<% _.each(patient.medicalInfo.drugIntolerances, function (drugIntolerance) { %>
							<p>
								<em class="Warning">
									<%= drugIntolerance.substance %>
									<% if (drugIntolerance.degree) { %>
									<%= drugIntolerance.degree %> степень
									<% } %>
									<% if (drugIntolerance.checkingDate) { %>
									установлено: <%= Core.Date.format(drugIntolerance.checkingDate) %>
									<% } %>
								</em>
							</p>
							<% }); %>
							<% } else { %>
							-
							<% } %>
						</div>
					</div>

					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Рост</span>
						</div>
						<div class="HalfCol">
							<p>
								<% if (physicalParameters.height) { %>
								<%= physicalParameters.height %> см
								<% } else { %>
								-
								<% } %>
							</p>
						</div>
					</div>

					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Вес</span>
						</div>
						<div class="HalfCol">
							<p>
								<% if (physicalParameters.weight) { %>
								<%= physicalParameters.weight %>
								<% if (moment().diff(moment(parseInt(patient.birthDate)), 'month') < 1) { %>
								г
								<% } else { %>
								кг
								<% } %>
								<% } else { %>
								-
								<% } %>
							</p>
						</div>
					</div>
				</div>
				<div class="LineCol">
					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Дата поступления</span>
						</div>
						<div class="HalfCol">
							<p>
								<% if (rangeAppealDateTime.start) { %>
								<%= Core.Date.format(rangeAppealDateTime.start) %>
								<% } else { %>
								-
								<% } %>
							</p>
						</div>
					</div>

					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Отделение</span>
						</div>
						<div class="HalfCol">
							<p>
								<% if (Core.Data.appealExtraData && Core.Data.appealExtraData.get('department')) { %>
								<%= Core.Data.appealExtraData.get('department').name %>
								<% } else { %>
								-
								<% } %>
							</p>
						</div>
					</div>

					<!--<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Палата</span>
						</div>
						<div class="HalfCol">
							<p>
								{{if ward}}
									${ward}
								{{else}}
									-
								{{/if}}
							</p>
						</div>
					</div>-->

					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Койка</span>
						</div>
						<div class="HalfCol">
							<p>
								_КОЙКА_
							</p>
						</div>
					</div>

					<div class="LineBlock">
						<div class="HalfCol">
							<span class="Label">Лечащий врач</span>
						</div>
						<div class="HalfCol">
							<p>
								_execPerson_
							</p>
						</div>
					</div>
				</div>
			</div>

		</li>
	</ul>
</div>
<div class="TreatmentBlock Clearfix">
	{{if diagnoses.length && diagnoses[0].diagnosisKind.length}}
		<div class="Diagnosis">
			{{each(i, diagnosis) diagnoses}}
				{{if diagnosis.diagnosisKind && diagnosis.mkb && diagnosis.mkb.code}}
					{{if diagnosis.diagnosisKind == "diagReceivedMkb"}}
						<h3>Направительный диагноз</h3>
					{{else diagnosis.diagnosisKind == "admissionMkb"}}
						<h3>Диагноз при поступлении</h3>
					{{else diagnosis.diagnosisKind == "mainDiagMkb"}}
						<h3>Клинический диагноз</h3>
					{{else diagnosis.diagnosisKind == "finalMkb"}}
						<h3>Заключительный диагноз</h3>
					{{else diagnosis.diagnosisKind == "aftereffectMkb"}}
						<h3>Сопутствующий к направительному</h3>
					{{else diagnosis.diagnosisKind == "attendantMkb"}}
						<h3>Осложнения к направительному</h3>
					{{else diagnosis.diagnosisKind == "assocDiagMkb"}}
						<h3>Сопутствующий к клиническому</h3>
					{{else diagnosis.diagnosisKind == "diagComplMkb"}}
						<h3>Осложнения к клиническому</h3>
					{{/if}}
					<dl>
						<dt>${diagnosis.mkb.code}</dt>
						<dd>${diagnosis.mkb.diagnosis}</dd>
					</dl>
				{{/if}}
			{{/each}}
		</div>
	{{/if}}

