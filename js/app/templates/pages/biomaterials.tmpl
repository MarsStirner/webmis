<section id="page" class="OneCol Clearfix">
	<div  class="biomaterials-head-filter clearfix">


		<div class="biomaterials-datatime">
			<span class="Label">Период дат</span>

			<div class="DayScroller">
				<a class="ScrollDay Actions Decrease" href="#">&lt;</a>

				<div class="DateTime">
					<div class="DatePeriod SingleDate Mandatory">
						<div class="FromTo">
							<input type="text" id="appeal-start-date" data-relation="#appeal-start-time" name="beginDate"
										 placeholder="дд.мм.гггг" class="SelectDate"/>
						</div>
						<i class="DateIcon Icon"></i>
					</div>
					<div class="SingleTime">
						<input type="text" id="appeal-start-time" class="HourPicker" data-relation="#appeal-start-date"
									 value="8:00" placeholder="чч:мм"/>
					</div>
				</div>
				<span class="MDash">—</span>

				<div class="DateTime">
					<div class="DatePeriod SingleDate Mandatory">
						<div class="FromTo">
							<input type="text" id="appeal-end-date" data-relation="#appeal-end-time" name="endDate"
										 placeholder="дд.мм.гггг" class="SelectDate"/>
						</div>
						<i class="DateIcon Icon"></i>
					</div>
					<div class="SingleTime">
						<input type="text" id="appeal-end-time" class="HourPicker" data-relation="#appeal-end-date"
									 value="7:59" placeholder="чч:мм"/>
					</div>
				</div>
				<a class="ScrollDay Actions Increase" href="#">&gt;</a>
			</div>
		</div>

		<div class="biomaterials-department">
			<label>Отделение</label>
			<select class="Styled" name="ward">
				<option value="" selected="selected">Все отделения</option>
				<option value="1">Отделение №1</option>
				<option value="2">Отделение №2</option>
				<option value="3">Отделение №3</option>
				<option value="4">Отделение №4</option>
				<option value="5">Отделение №5</option>
			</select>
		</div>


		<div class="biomaterials-print">
			<button class="Styled Button"><span>Печать</span></button>
		</div>


	</div>


	<div class="ContentSide Clearfix">
		<div class="ContentHolder">


					<div class="biomaterials-table-filter clearfix">
						<div class="biomaterials-action-type">
							<label for="ward90">Тип исследования</label>

							<select class="Styled" name="ward">
								<option value="" selected="selected">Все типы исследования</option>
								<option value="1">Кровь венозная</option>
								<option value="2">Плазма крови</option>
								<option value="3">Моча</option>
								<option value="4">Костный мозг</option>
								<option value="5">Мазок</option>
							</select>
						</div>

						<div class="biomaterials-status">
							<label>Статус</label>
							<ul class="horizontal">
								<li class="active"><a href="#">Все</a></li>
								<li><a href="#">Ожидается</a></li>
								<li><a href="#">Выполняется</a></li>
								<li><a href="#">Закончено</a></li>
							</ul>
						</div>

						<div class="biomaterials-send-to-lab">
							<!--<button class="Styled Button"><span>Выполнено</span></button>-->

							<button class="Styled Button"><span>Отправить в лабораторию</span></button>
						</div>

					</div>




			<div id="biomaterial-grid"></div>

			<div>

				<table class="tubes Grid">
					<thead>
					<tr>
						<th>
							Пробирки
						</th>
					</tr>

					</thead>
					<tbody>
					<tr>
						<td>
							MONOVETTE 4.0 <span class="color-label" style="background-color:#57cc81;"></span> 3шт.
						</td>
					</tr>

					<tr>
						<td>
							MONOVETTE 2.0 <span class="color-label" style=""></span> 2шт.
						</td>
					</tr>

					<tr>
						<td>MONOVETTE 1.0 <span class="color-label" style="background-color:#5d9bcc;"></span> 1шт.
						</td>
					</tr>
					</tbody>
				</table>
			</div>

		</div>
	</div>
</section>

