<div class="biomaterials-datatime">
	<span class="Label">Период дат</span>

	<div class="DayScroller">
		<a class="ScrollDay Actions Decrease" href="#">&lt;</a>

		<div class="DateTime">
			<div class="DatePeriod SingleDate Mandatory">
				<div class="FromTo">
					<input type="text" id="from-date" name="beginDate" placeholder="дд.мм.гггг" class="SelectDate from-date"/>
				</div>
				<i class="DateIcon Icon"></i>
			</div>
			<div class="SingleTime">
				<input type="text" id="from-time" class="HourPicker from-time" value="" placeholder="чч:мм"/>
			</div>
		</div>
		<span class="MDash">—</span>

		<div class="DateTime">
			<div class="DatePeriod SingleDate Mandatory">
				<div class="FromTo">
					<input type="text" id="to-date" name="endDate"
								 placeholder="дд.мм.гггг" class="SelectDate to-date"/>
				</div>
				<i class="DateIcon Icon"></i>
			</div>
			<div class="SingleTime">
				<input type="text" id="to-time" class="HourPicker to-time" value="" placeholder="чч:мм"/>
			</div>
		</div>
		<a class="ScrollDay Actions Increase" href="#">&gt;</a>
	</div>
</div>
